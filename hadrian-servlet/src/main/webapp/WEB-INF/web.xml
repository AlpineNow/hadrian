        <url-pattern>/change-number-of-instances</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>increase-number-of-instances</servlet-name>
        <url-pattern>/increase-number-of-instances</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>decrease-number-of-instances</servlet-name>
        <url-pattern>/decrease-number-of-instances</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>attach-file-input</servlet-name>
        <url-pattern>/attach-file-input</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>attach-file-output</servlet-name>
        <url-pattern>/attach-file-output</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>input-loop-on</servlet-name>
        <url-pattern>/input-loop-on</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>input-loop-off</servlet-name>
        <url-pattern>/input-loop-off</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>set-default-timeout</servlet-name>
        <url-pattern>/set-default-timeout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>set-default-pfa-version</servlet-name>
        <url-pattern>/set-default-pfa-version</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>snapshot</servlet-name>
        <url-pattern>/snapshot</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>stream-logfile</servlet-name>
        <url-pattern>/stream-logfile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>get-performance-statistics</servlet-name>
        <url-pattern>/get-performance-statistics</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>reset-performance-statistics</servlet-name>
        <url-pattern>/reset-performance-statistics</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>get-memory-usage</servlet-name>
        <url-pattern>/get-memory-usage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>get-sampling-profiler</servlet-name>
        <url-pattern>/get-sampling-profiler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>reset-sampling-profiler</servlet-name>
        <url-pattern>/reset-sampling-profiler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>install-residuals</servlet-name>
        <url-pattern>/install-residuals</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>install-confusion-matrix</servlet-name>
        <url-pattern>/install-confusion-matrix</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>get-data-quality</servlet-name>
        <url-pattern>/get-data-quality</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>reset-data-quality</servlet-name>
        <url-pattern>/reset-data-quality</url-pattern>
    </servlet-mapping>

</web-app>
